
@{
    ViewBag.Title = "WareHouse";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/myStyle.css")">
    <style>
        html, body, h1, h2, h3, h4, h5, h6 {
            font-family: "Roboto", sans-serif
        }
    </style>
    <body id="WareHouse">
        <div class="w3-content w3-margin-top" style="max-width:1400px;">
            <div class="w3-row-padding">
                <div class="w3-third">

                    <div class="w3-white w3-text-grey w3-card-4">
                        <div class="w3-display-container">
                            <div class="w3-display-bottomleft w3-container w3-text-black">
                                <h2>Warehouse</h2>
                            </div>
                        </div>
                        <div class="w3-container">
                            <hr>

                            <p class="w3-large"><b><i class="fa fa-asterisk fa-fw w3-margin-right w3-text-teal"></i>İlerleme</b></p>
                            <p>Login/Register</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:100%">100%</div>
                            </div>
                            <p>Liste</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:90%">
                                    <div class="w3-center w3-text-white">75%</div>
                                </div>
                            </div>
                            <p>Değişim Geçmişi</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:0%">0%</div>
                            </div>
                            <p>Görünüm Düzenleme</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:80%">80%</div>
                            </div>
                            <p>Admin/User Rolleri</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:0%">0%</div>
                            </div>
                            <p>Data detaylı Liste</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:0%">0%</div>
                            </div>
                            <br>
                            <hr>
                            <br>
                        </div>
                    </div><br>
                </div>
                <div class="w3-twothird">

                    <div class="w3-container w3-card w3-white w3-margin-bottom">
                        <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-suitcase fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Gelişmeler</h2>
                        <div class="w3-container">
                            <h5 class="w3-opacity"><b>CSS</b></h5>
                            <h6 class="w3-text-teal"><span class="w3-tag w3-teal w3-round">Current</span></h6>
                            <p>Görünümler düzenlendi.</p>
                            <hr>
                        </div>
                        <div class="w3-container">
                            <h5 class="w3-opacity"><b>Liste</b></h5>
                            <h6 class="w3-text-teal"></h6>
                            <p>Çalışan liste ve listeye ekleme.</p>
                            <hr>
                        </div>
                        <div class="w3-container">
                            <h5 class="w3-opacity"><b>Login/Register</b></h5>
                            <p>Çalışan Databaseye kaydeden Login sistemi</p>
                            <hr>
                        </div>
                        <div class="w3-container">
                            <h5 class="w3-opacity"><b>Başlangıç</b></h5>
                            <p>Basit planlamaya ve bu sayfa.</p><br>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="w3-container w3-teal w3-center w3-margin-top">
        </footer>
    </body>
</head>
</html>
