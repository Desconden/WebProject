@model WebProje.Models.User

@{
    ViewBag.Title = "Login";
}

<html>
<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/myStyle.css")">
    <body class="Login">
        <div>
            <h1>Log in.</h1>
            <h3>Use a local account to log in.</h3>

            <div>
                <div class="row justify-content-md-center">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                @using (Html.BeginForm("LoginPage", "Login", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <h4>Email</h4>
                                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                                    </div>
                                    <div class="form-group">
                                        <h4>Password</h4>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


                <p><a href="@Url.Action("/RegisterPage")">Register</a> if you don't have an account.</p>
            </div>
            <div id="Footer">

            </div>
        </div>
    </body>
</head>
</html>