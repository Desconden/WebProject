@model IEnumerable<WebProje.Models.Product>

@{
    ViewBag.Title = "ProductList";
}
<html>
<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/PopUp.css")">
    <body>
        <h2>ProductList</h2>
        <div>
            <div class="box">
                <a class="button" href="#popup1">Warning</a>
            </div>

            <div id="popup1" class="overlay">
                <div class="popup">
                    <h2>Warning</h2>
                    <a class="close" href="#">&times;</a>
                    <div class="content">
                        Because of missing codes It will not confirm deleting. When clicked it will just delete it. Make sure before deleting.
                    </div>
                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <a href="/Product/Edit/@item.ProductID">Edit</a> |
                        <a href="/Product/Delete/@item.ProductID">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </body>
</head>
</html>